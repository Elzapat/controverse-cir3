{{#*inline "stylesheets"}}
    <link rel="stylesheet" href="static/css/acteurs.css">
{{/inline}}

{{#*inline "main"}}
    <h1>Acteurs</h1>
    <hr>
    <article id="main-article">
        <article class="sub-article">
            <section class="article-content">
                <h2>FDA</h2>
                <p class="article-text">{{ fda }}</p>
            </section>
            <img class="article-image" src="static/images/fda.png">
        </article>
        <hr class="article-sep">
        <article class="sub-article">
            <section class="article-content">
                <h2>23andMe</h2>
                <p class="article-text">{{ ttandme }}</p>
            </section>
            <img class="article-image" id="ttandme-img" src="static/images/23andMe.png">
        </article>
        <hr class="article-sep">
        <article class="sub-article">
            <section class="article-content">
                <h2>Google</h2>
                <p class="article-text">{{ google }}</p>
            </section>
            <img class="article-image" src="static/images/google.png">
        </article>
        <hr class="article-sep">
        <article class="sub-article">
            <section class="article-content">
                <h2>Chercheurs et scientifiques</h2>
                <p class="article-text">{{ chercheurs }}</p>
            </section>
            <img class="article-image" src="static/images/chercheurs.jpg">
        </article>
    </article>
{{/inline}}

{{~> layout title="Acteurs" ~}}
